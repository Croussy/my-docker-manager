<% include static/head.ejs %>

<div class="container">
    <div class="row">
        <div class=".col-md-6 .col-md-6 .col-md-offset-3">
            <% if (message.length > 0 ) { %>
                <div class="alert alert-danger"><%= message %></div>
            <%}%>
            <h1>Inscription :</h1>
            <form action="/signup" method="post">
                <div class="form-group">
                    <label>Nom d'utilisateur</label>
                    <input name="username" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label>Mot de passe</label>
                    <input name="password" type="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-success btn-lg">Enregistrement</button>
            </form>
            <hr>
            <p><a href="/login"><span class="glyphicon glyphicon-user"></span> Connection</a></p>
        </div>
    </div>
</div>

